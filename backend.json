{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Users": {
      "type": "object",
      "patternProperties": {
        "^[0-9A-Za-z]+$": {
          "type": "object",
          "properties": {
            "date_joined": { "type": "string", "format": "date" },
            "email": { "type": "string", "format": "email" },
            "name": { "type": "string" },
            "user_agreement": { "type": "boolean" },
            "user_pfp": { "type": "string" },
            "user_posts": {
              "type": "object",
              "patternProperties": {
                "^[0-9A-Za-z]+$": {
                  "type": "object",
                  "properties": {
                    "item_image": { "type": "string" },
                    "item_name": { "type": "string" },
                    "item_offers": { "type": "string" },
                    "item_post_date": { "type": "string" }
                  },
                  "required": ["item_image", "item_name", "item_offers", "item_post_date"]
                }
              }
            },
            "user_settings": {
              "type": "object",
              "properties": {
                "dark_mode": { "type": "boolean" },
                "private_profile": { "type": "boolean" }
              },
              "required": ["dark_mode", "private_profile"]
            },
            "username": { "type": "string" }
          },
          "required": ["date_joined", "email", "name", "user_agreement", "user_pfp", "user_posts", "user_settings", "username"]
        }
      }
    }
  },
  "required": ["Users"]
}
