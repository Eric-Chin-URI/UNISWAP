{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Users": {
      "type": "object",
      "properties": {
        "sample_user_id": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "name": { "type": "string" },
            "user_posts": {
              "type": "object",
              "properties": {
                "item_image": { "type": "string" },
                "item_name": { "type": "string" },
                "item_offers": { "type": "string" },
                "item_post_ID": { "type": "string" },
                "item_post_date": { "type": "string" }
              },
              "required": ["item_image", "item_name", "item_offers", "item_post_ID", "item_post_date"]
            },
            "user_settings": {
              "type": "object",
              "properties": {
                "dark_mode": { "type": "string" },
                "user_agreement": { "type": "string" }
              },
              "required": ["dark_mode", "user_agreement"]
            },
            "username": { "type": "string" }
          },
          "required": ["email", "name", "user_posts", "user_settings", "username"]
        }
      },
      "required": ["sample_user_id"]
    }
  },
  "required": ["Users"]
}
